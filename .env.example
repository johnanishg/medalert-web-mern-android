# Frontend Environment Variables (Vite)
# Use relative URL for localhost development (Vite proxy handles /api -> localhost:5000)
# VITE_API_BASE_URL=/api

# Optional if frontend uses Gemini directly
VITE_GEMINI_API_KEY=your-gemini-api-key-here

# Backend Environment Variables
PORT=5000
NODE_ENV=development
JWT_SECRET=your-super-secret-jwt-key-change-me
ADMIN_ACCESS_KEY=your-admin-access-key-here
MONGODB_URI=mongodb://localhost:27017/medalert
GEMINI_API_KEY=your-gemini-api-key-here
GCLOUD_PROJECT_ID=your-gcloud-project-id
GCLOUD_TRANSLATE_LOCATION=global
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
