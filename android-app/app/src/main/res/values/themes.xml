<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MedAlert" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Material Design 3 color tokens for light theme -->
        <item name="colorPrimary">@color/medalert_primary</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorPrimaryContainer">@color/medalert_primary_light</item>
        <item name="colorOnPrimaryContainer">@color/black</item>
        <item name="colorSecondary">@color/medalert_secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSecondaryContainer">@color/medalert_secondary_light</item>
        <item name="colorOnSecondaryContainer">@color/black</item>
        <item name="colorTertiary">@color/medalert_success</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorError">@color/medalert_error</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorErrorContainer">#FFFFDAD6</item>
        <item name="colorOnErrorContainer">#FF410002</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">#FFE7E0EC</item>
        <item name="colorOnSurfaceVariant">#FF49454F</item>
